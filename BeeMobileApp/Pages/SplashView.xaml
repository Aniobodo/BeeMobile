<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BeeMobileApp.Pages.SplashView"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="White">
    <ContentPage.Content>
        <Grid>
            <StackLayout Orientation="Horizontal">
                <BoxView x:Name="LeftPane" VerticalOptions="FillAndExpand" HorizontalOptions="Center" BackgroundColor="White"/>
                <Grid>
                    <Image x:Name="StartImage" Source="BeeLogo.png"  VerticalOptions="Center"/>
                    <BoxView x:Name="RightPane" VerticalOptions="FillAndExpand" HorizontalOptions="Center" BackgroundColor="White"/>
                </Grid>
                
            </StackLayout>

            <ActivityIndicator x:Name="Waiting" VerticalOptions="Center" IsRunning="True" HorizontalOptions="Center" Color="Black"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>