<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
           xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
           x:Class="BeeMobileApp.Pages.WaitPopup"
           Color="Transparent"           
           CanBeDismissedByTappingOutsideOfPopup="False">
    
    
    <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" BackgroundColor="Transparent">
        <Image x:Name="CenterImage" HorizontalOptions="Center" VerticalOptions="Center" Source="HeaderLogo.png" BackgroundColor="Transparent"/>
        <ActivityIndicator HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" IsRunning="True" Color="#DC0D15" BackgroundColor="Transparent"/>
    </Grid>   
    
</toolkit:Popup>